.wrapper
  = render "shared/side_bar"

  .main-chat
    .main-chat__header
      .main-chat__header__group
        .main-chat__header__group__user-name
          Group name
        .main-chat__header__group__member
          Member
      .main-chat__header__edit
        Edit

    .main-chat__message
      .main-chat__message__box
        .main-chat__message__box__name
          mizuno
        .main-chat__message__box__date
          2019/11/26
      .main-chat__message__text
        This is a first message.

      
    .form
      = form_for [@group, @message] do |f|
        = f.text_field :text, class: 'form__message', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit'